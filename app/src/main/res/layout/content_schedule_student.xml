<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".player.ScheduleActivityStudent"
    tools:showIn="@layout/activity_schedule_student">

    <com.alamkanak.weekview.WeekView
        android:id="@+id/weekView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="57dp"
        android:layout_marginBottom="48dp"
        app:columnGap="8dp"
        app:dayBackgroundColor="#05000000"
        app:eventMarginVertical="0dp"
        app:eventPadding="0dp"
        app:eventTextColor="@android:color/white"
        app:firstDayOfWeek="monday"
        app:headerColumnBackground="?attr/colorContrasted"
        app:headerColumnPadding="8dp"
        app:headerColumnTextColor="?attr/colorContrasted"
        app:headerRowBackgroundColor="?attr/colorListItems"
        app:headerRowPadding="12dp"
        app:hourHeight="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:noOfVisibleDays="5"
        app:textSize="12sp"
        app:todayBackgroundColor="#1848adff"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>